<!-- Header -->
<%- include('../partials/header') %>

<!-- Conteúdo -->
<section class="container painel-produtos">
    <h1>Painel Administrativo</h1>
    <h2>Produto - Editar</h2>

    <form method="POST" action="/adm/produtos/acaoEditar/<%= produto.id %>" enctype="multipart/form-data">
        <div>
            <label>Título:</label>
            <input type="text" name="titulo" value="<%= produto.titulo %>" />
        </div>
        <div>
            <label>Autor:</label>
            <select type="text" name="autor">
                <% for(let i = 0; i < autores.length; i++) { %>
                    <option value="<%= autores[i].id %>">
                        <%= autores[i].nome %>
                    </option>
                <% } %>
            </select>
        </div>
        <div>
            <label>Preço:</label>
            <input type="text" name="preco" value="<%= produto.preco %>" />
        </div>
        <div>
            <label>Descrição:</label>
            <textarea name="descricao"><%= produto.descricao %></textarea>
        </div>
        <div>
            <label>Avaliação:</label>
            <input type="text" name="avaliacao" value="<%= produto.avaliacao %>" />
        </div>
        <div>
            <label>Tipo:</label>
            <select type="text" name="tipo">
                <% for(let i = 0; i < tipo.length; i++) { %>
                    <option value="<%= tipo[i].id %>">
                        <%= tipo[i].nome %>
                    </option>
                <% } %>
            </select>
        </div>

        <button>Salvar</button>
    </form>
</section>

<!-- Carrinho -->
<%- include('../partials/carrinho') %>

<!-- Footer -->
<%- include('../partials/footer') %>