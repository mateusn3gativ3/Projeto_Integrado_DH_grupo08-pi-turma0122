<!-- Header -->
<%- include('../partials/header') %>

<!-- Conteúdo -->
<section class="container painel-produtos">
    <h1>Painel Administrativo</h1>
    <h2>Produtos - Cadastrar</h2>

    <form method="POST" action="/adm/acao-cadastrar-produtos" enctype="multipart/form-data">
        <div>
            <label>Título:</label>
            <input type="text" name="titulo" />
        </div>
        <div>
            <label>Autor:</label>
            <input type="text" name="autor" />
        </div>
        <div>
            <label>Preço:</label>
            <input type="text" name="preco" />
        </div>
        <div>
            <label>Descrição:</label>
            <textarea name="descricao"></textarea>
        </div>
        <div>
            <label>Avaliação:</label>
            <input type="text" name="avaliacao" />
        </div>
        <div>
            <label>Imagem:</label>
            <input type="file" name="imagemProduto" />
        </div>

        <button>Cadastrar</button>
    </form>
</section>

<!-- Carrinho -->
<%- include('../partials/carrinho') %>

<!-- Footer -->
<%- include('../partials/footer') %>