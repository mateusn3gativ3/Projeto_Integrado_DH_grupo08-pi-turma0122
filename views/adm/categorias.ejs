<!-- Header -->
<%- include('../partials/adm-header') %>

<!-- Conteúdo -->
<section class="container painel-produtos">
    <h1>Painel Administrativo</h1>
    <h2>Categorias</h2>
    <a href="/adm/categorias/cadastrar" class="btn-adicionar">Adicionar novo</a>

    <!-- Tabela de Produtos -->
    <table class="tabela-produtos">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% for(genero of generos) { %>
                <tr>
                    <td><%= genero.nome %></td>
                    <td class="acoes">
                        <form action="/adm/categorias/editar/<%= genero.id %>"><button class="btn-editar">Editar</button></form>
                        <form action="/adm/categorias/excluir/<%= genero.id %>" method="POST"><button class="btn-excluir">Excluir</button></form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</section>
<!-- Carrinho -->
<%- include('../partials/carrinho') %>

<!-- Footer -->
<%- include('../partials/footer') %>